<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#DCD6D6"
    android:layout_height="match_parent"
    tools:context=".DashActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">
        <Button
            android:background="#304F83"
            android:drawableStart="@drawable/ic_baseline_add_24"
            android:drawablePadding="10dp"
            android:textSize="25dp"
            android:layout_width="match_parent"
            android:text="Add Budget"
            android:onClick="onClickAdd"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_height="100dp"/>
        <Button
            android:layout_marginTop="20dp"
            android:background="#CC8D3C"
            android:drawableStart="@drawable/ic_baseline_view_list_24"
            android:drawablePadding="10dp"
            android:textSize="25dp"
            android:layout_width="match_parent"
            android:text="Budget Records"
            android:textColor="@color/white"
            android:onClick="onClickViewBudgets"
            android:textAllCaps="false"
            android:layout_height="100dp"/>
    </LinearLayout>
</RelativeLayout>